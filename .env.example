# HealthConnect+ Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0
APP_PORT=3017

# Database Configuration
MONGO_USER=healthconnect
MONGO_PASSWORD=healthconnect123
MONGO_DB=healthconnect
MONGO_PORT=27017
MONGO_HOST_PORT=27018

# Security Configuration
JWT_SECRET=healthconnect-jwt-secret-2025
SESSION_SECRET=healthconnect-session-secret-2025

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Jenkins CI/CD Configuration
BUILD_NUMBER=local
GIT_COMMIT=unknown
BUILD_URL=http://localhost:8080

# Docker Hub Configuration
DOCKERHUB_USERNAME=yourusername
DOCKERHUB_REPO=yourusername/healthconnect-app

# AWS Configuration
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID
AWS_REGION=us-east-1
ECR_REPO=YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/healthconnect-app

# Kubernetes Configuration
K8S_NAMESPACE=healthconnect
K8S_DEPLOYMENT=healthconnect-app

# Dynamic Image Configuration (set by Jenkins)
HEALTHCONNECT_IMAGE=healthconnect-app:latest
